for (let i = 1; i <= 40; i++) {
  console.log(i); // Выводит текущее значение переменной i в консоль
}

let i = 1; // Инициализация переменной до начала цикла
while (i <= 40) {
  console.log(i); // Выводит текущее значение переменной i в консоль
  i++; // Увеличиваем переменную на 1 после каждой итерации
}

let i = 1; // Инициализация переменной до начала цикла
do {
  console.log(i); // Выводит текущее значение переменной i в консоль
  i++; // Увеличиваем переменную на 1 после каждой итерации
} while (i <= 40); // Условие проверяется после выполнения кода в блоке do
