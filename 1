function askZodiacSignAndGreet() {
  let zodiacSign = prompt('Пожалуйста, введите ваш знак зодиака:');
  let greeting = '';

  switch (zodiacSign.toLowerCase()) {
    case 'овен':
      greeting = 'Смелость и энергия Овна вдохновляют!';
      break;
    case 'телец':
      greeting = 'Надежность Тельца приносит уверенность!';
      break;
    case 'близнецы':
      greeting = 'Интеллект и остроумие Близнецов очаровывают!';
      break;
    case 'рак':
      greeting = 'Чувствительность и забота Рака внушают доверие!';
      break;
    case 'лев':
      greeting = 'Щедрость и лидерство Льва восхищают!';
      break;
    case 'дева':
      greeting = 'Трудолюбие и точность Девы вдохновляют на успех!';
      break;
    case 'весы':
      greeting = 'Гармония и справедливость Весов создают баланс!';
      break;
    case 'скорпион':
      greeting = 'Страсть и решимость Скорпиона поражают!';
      break;
    case 'стрелец':
      greeting = 'Оптимизм и свободолюбие Стрельца вдохновляют!';
      break;
    case 'козерог':
      greeting = 'Дисциплина и амбиции Козерога ведут к вершинам!';
      break;
    case 'водолей':
      greeting = 'Независимость и инновации Водолея впечатляют!';
      break;
    case 'рыбы':
      greeting = 'Интуиция и творчество Рыб завораживают!';
      break;
    default:
      greeting = 'Интересный знак зодиака! Добро пожаловать!';
  }

  alert(greeting);
}
